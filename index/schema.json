{
	"type": "object",
	"properties": {
		"language": {"type": "string"},
		"title": {"type": "string"},
		"source_name": {"type": "string"},
		"source_url": {"type": "string"},
		"media_urls": {
			"type": "array",
			"items": {
				"type": "string",
				"minItems": 1,
				"uniqueItems": true
			}
		},
		"checksum": {"type": "string"},
		"origin_checksum": {"type": "string"},
		"pregain": {"type": "string"},
		"date": {"type": "string"},
		"annotations": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"annotator": {"type": "string"},
					"offset": {"type": "number"},
					"duration": {"type": "number"},
					"label": {
						"type": "string",
						"pattern": "^(good|bad)$"
					},
					"problems": {
						"type": "array",
						"items": {
							"type": "string",
							"pattern": "^(noise|multiple languages|wrong language|excess loan words|language or place reference|pauses)$"
						}
					},
					"genders": {
						"type": "string",
						"pattern": "^(male|female|mixed|unclear)$"
					},
					"speakers": {"type": "number"},
					"date": {"type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"}
				},
				"required": [
					"annotator",
					"offset",
					"duration",
					"label",
					"speakers",
					"genders"
				]
			}
		}
	},
	"required": [
		"language",
		"title",
		"source_name",
		"source_url",
		"media_urls",
		"date",
		"checksum"
	]
}
